# Voice System Environment Variables

# Picovoice Configuration
# Get your free key at https://console.picovoice.ai/
PICOVOICE_ACCESS_KEY=your-key-here

# Voice Detection Settings
WAKE_WORD_THRESHOLD=0.55
CONFIDENCE_THRESHOLD=0.6
ENABLE_VAD=true
ENABLE_STREAMING=true
USE_PICOVOICE=true

# Optimization Settings
JARVIS_OPTIMIZATION_LEVEL=balanced
JARVIS_MAX_MEMORY_PERCENT=25
JARVIS_MAX_MODELS_IN_MEMORY=3

# macOS Acceleration
JARVIS_USE_COREML=true
JARVIS_USE_METAL=true

# Debug Settings
JARVIS_DEBUG_MODE=false
JARVIS_LOG_PERFORMANCE_METRICS=true