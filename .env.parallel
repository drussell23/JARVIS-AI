# Parallel Startup Configuration
# No hardcoding - all configurable!

# === PARALLEL STARTUP SETTINGS ===
STARTUP_MAX_WORKERS=4
HEALTH_CHECK_INTERVAL=1.0
STARTUP_TIMEOUT=60
PARALLEL_HEALTH_CHECKS=true

# === SERVICE PORTS ===
BACKEND_PORT=8000
WS_ROUTER_PORT=8001
VISION_PORT=8002
VOICE_PORT=8003
MONITOR_PORT=8888

# === SERVICE TIMEOUTS ===
WS_ROUTER_TIMEOUT=30
BACKEND_TIMEOUT=60
VISION_TIMEOUT=45
VOICE_TIMEOUT=30
MONITOR_TIMEOUT=10

# === BACKEND OPTIMIZATION ===
BACKEND_PARALLEL_IMPORTS=true
BACKEND_LAZY_LOAD_MODELS=true
BACKEND_PRELOAD_CACHE=true
BACKEND_IMPORT_TIMEOUT=10
BACKEND_MAX_IMPORT_WORKERS=4
OPTIMIZE_STARTUP=true

# === COMPONENT LOADING ===
COMPONENT_LOAD_TIMEOUT=30
PARALLEL_IMPORTS=true

# === CORS CONFIGURATION ===
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000

# === HEALTH CHECK ENDPOINTS ===
WS_ROUTER_HEALTH=/health
BACKEND_HEALTH=/health
VISION_HEALTH=/vision/health
VOICE_HEALTH=/voice/health

# === PERFORMANCE SETTINGS ===
# Memory Management
MEMORY_LIMIT_MB=4096
MEMORY_CHECK_INTERVAL=30
MEMORY_CLEANUP_THRESHOLD=0.8

# CPU Management
CPU_LIMIT_PERCENT=50
CPU_CHECK_INTERVAL=10

# === MONITORING ===
ENABLE_MONITORING=true
MONITORING_INTERVAL=5
MONITORING_BUFFER_SIZE=100

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/jarvis_parallel.log

# === RETRY SETTINGS ===
SERVICE_RETRY_ATTEMPTS=3
SERVICE_RETRY_DELAY=2.0

# === OPTIONAL SERVICES ===
# Set to false to disable optional services
ENABLE_VISION=true
ENABLE_VOICE=true
ENABLE_MONITORING=true
ENABLE_SWIFT_BRIDGES=true

# === WARMUP SETTINGS ===
WARMUP_ENDPOINTS=true
WARMUP_DELAY=1.0

# === CACHE SETTINGS ===
CACHE_SIZE_MB=512
CACHE_TTL_SECONDS=3600
PRELOAD_COMMON_RESPONSES=true

# === GRACEFUL SHUTDOWN ===
SHUTDOWN_TIMEOUT=30
FORCE_KILL_TIMEOUT=5