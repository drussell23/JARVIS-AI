# JARVIS AI Agent Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# CLOUD SQL DATABASE CONFIGURATION
# ============================================================================
# Database type: "cloudsql" for Google Cloud SQL, "sqlite" for local database
JARVIS_DB_TYPE=cloudsql

# Cloud SQL connection name (format: project:region:instance)
JARVIS_DB_CONNECTION_NAME=your-project:region:instance-name

# Database host (127.0.0.1 for Cloud SQL proxy, or Cloud SQL private IP)
JARVIS_DB_HOST=127.0.0.1

# Database port (default: 5432 for PostgreSQL)
JARVIS_DB_PORT=5432

# Database password
JARVIS_DB_PASSWORD=your-database-password

# ============================================================================
# GOOGLE CLOUD PLATFORM (GCP) CONFIGURATION
# ============================================================================
# Path to GCP service account credentials JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# GCP project ID
GCP_PROJECT_ID=your-gcp-project-id

# Enable/disable GCP Spot VM auto-creation (true/false)
GCP_VM_ENABLED=true

# ============================================================================
# ANTHROPIC CLAUDE API
# ============================================================================
# Anthropic API key for Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# ============================================================================
# VOICE SERVICES
# ============================================================================
# Picovoice access key for wake word detection
PICOVOICE_ACCESS_KEY=your-picovoice-access-key

# ============================================================================
# THIRD-PARTY API KEYS (Optional Services)
# ============================================================================
# ElevenLabs API key for text-to-speech (premium voice synthesis)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# OpenWeather API key for weather data
OPENWEATHER_API_KEY=your-openweather-api-key

# ============================================================================
# DATABASE CONFIGURATION (Additional Settings)
# ============================================================================
# Database name (default: jarvis)
JARVIS_DB_NAME=jarvis

# Database user (default: postgres)
JARVIS_DB_USER=postgres

# ============================================================================
# BACKEND SERVER CONFIGURATION
# ============================================================================
# Backend server port (default: 8000)
BACKEND_PORT=8000

# WebSocket router port (default: 8765)
WS_ROUTER_PORT=8765

# CORS allowed origins (comma-separated, default: http://localhost:3000)
CORS_ORIGINS=http://localhost:3000

# ============================================================================
# JARVIS USER & VOICE CONFIGURATION
# ============================================================================
# Your username for personalized responses
JARVIS_USER=your-name

# Enable/disable voice features (true/false)
JARVIS_VOICE_ENABLED=true

# Enable/disable web UI (true/false)
JARVIS_WEB_UI=true

# ============================================================================
# PERFORMANCE & OPTIMIZATION
# ============================================================================
# Enable optimized startup (reduces initialization time)
OPTIMIZE_STARTUP=true

# Enable parallel component loading (faster startup)
USE_PARALLEL_STARTUP=true

# Memory-optimized mode for lower RAM usage (true/false)
MEMORY_OPTIMIZED_MODE=false

# Backend parallel imports for faster startup
BACKEND_PARALLEL_IMPORTS=true

# Lazy load ML models to reduce memory usage
BACKEND_LAZY_LOAD_MODELS=true

# ============================================================================
# VISION & SCREEN ANALYSIS
# ============================================================================
# Enable continuous vision monitoring
VISION_CONTINUOUS_ENABLED=false

# Vision cache size in MB (default: 100)
VISION_CACHE_SIZE_MB=100

# Maximum concurrent vision requests (default: 3)
VISION_MAX_CONCURRENT=3

# Vision analysis timeout in seconds (default: 30)
VISION_TIMEOUT=30

# ============================================================================
# WAKE WORD DETECTION
# ============================================================================
# Wake word detection sensitivity (0.0-1.0, higher = more sensitive)
WAKE_WORD_THRESHOLD=0.5

# Enable wake word detection
WAKE_WORD_ENABLED=true

# ============================================================================
# ADVANCED FEATURES (Optional)
# ============================================================================
# Enable goal automation and inference
JARVIS_GOAL_AUTOMATION=false

# Enable quadtree spatial optimization for vision
QUADTREE_SPATIAL_ENABLED=false

# ============================================================================
# GCP CLOUD CONFIGURATION (Additional Settings)
# ============================================================================
# GCP region (default: us-central1)
GCP_REGION=us-central1

# GCP zone (default: us-central1-a)
GCP_ZONE=us-central1-a

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================
# Environment (development/production)
JARVIS_ENV=production

# Log level (DEBUG/INFO/WARNING/ERROR/CRITICAL)
LOG_LEVEL=INFO

# Debug mode - verbose logging (true/false)
JARVIS_DEBUG=false
